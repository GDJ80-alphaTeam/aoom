<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alpha.aoom.userAuthNo.service.UserAuthNoMapper">

	<!-- 컬럼 이름 sql조각 -->
	<sql id="user_auth_no_col">
		 user_id
		,auth_no
		,create_date
	</sql>

	<!-- 인증번호 DB 저장 -->
	<insert id="insert" parameterType="map">
		INSERT INTO user_auth_no(
			 user_id
			,auth_no
		) VALUES(
			 #{userId}
			,#{authNo}
		)
	</insert>
	
	<!-- 인증번호 일치여부 확인 -->
	<select id="select" parameterType="camelCaseMap" resultType="int">
		SELECT
			COUNT(*) 
		FROM 
			user_auth_no
		WHERE 
			user_id = #{userId} AND auth_no = #{authNo}
	</select>
	
	<!-- 인증이력 조회 -->
	<select id="selectByAuthNoCheck" parameterType="camelCaseMap" resultType="int">
		SELECT
			COUNT(*) 
		FROM 
			user_auth_no
		WHERE 
			user_id = #{userId} 
	</select>
	
	<!-- 인증번호 업데이트 -->
	<update id="update" parameterType="map">
		UPDATE
			user_auth_no
		SET
			 auth_no = #{authNo}
			,create_date = SYSDATE	
		WHERE 
			user_id = #{userId} 			
	</update>
	
</mapper>